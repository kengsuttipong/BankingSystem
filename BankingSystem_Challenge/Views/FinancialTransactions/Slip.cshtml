@model BankingSystem_Challenge.ViewModels.VerifyAccount;
@{
    ViewData["Title"] = "Pay Slip";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card mt-5">
                <div class="card-header text-center">
                    <h4 class="text-success">
                        <i class="bi bi-check-circle-fill"></i> Pay Slip
                    </h4>
                    <span>
                        @Model.DateExcute
                    </span>
                </div>
                <div class="card-body">
                        <div class="mb-3">
                            <div class="row">
                                <div class="col-6 text-start">
                                    From
                                </div>
                                <div class="col-6 text-end">
                                    <strong>@Model.FromName</strong><br />
                                    @Model.FromIban
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="mb-3">
                            <div class="row">
                                <div class="col-6 text-start">
                                    To
                                </div>
                                <div class="col-6 text-end">
                                    <strong>@Model.ToName</strong><br />
                                    @Model.ToIBAN
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="mb-3">
                            <div class="row">
                                <div class="col-6 text-start">
                                    Amount
                                </div>
                                <div class="col-6 text-end">
                                    <strong>@Model.Amount.ToString("0.00")</strong>
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="mb-3">
                            <div class="row">
                                <div class="col-6 text-start">
                                    Fee
                                </div>
                                <div class="col-6 text-end">
                                    <strong>@Model.Fee.ToString("0.00")</strong>
                                </div>
                            </div>
                        </div>
                    <div class="row mt-3 text-center">
                        <a asp-action="Index" asp-controller="Home">
                            <i class="bi bi-chevron-left"></i> Back to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
