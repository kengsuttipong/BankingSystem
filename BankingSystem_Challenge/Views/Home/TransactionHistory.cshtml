@model BankingSystem_Challenge.ViewModels.TransactionHistoryViewModel;
@{
    ViewData["Title"] = "Transaction";
}

<div class="row mt-4 mb-4">
    <div class="row mt-4">
        <div class="col-6">
            <h4>
                <strong class="text-danger">
                    <i class="bi bi-wallet2"></i> My balance :
                </strong>
            </h4>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-action="Verify" asp-controller="FinancialTransactions">
                <i class="bi bi-arrow-repeat"></i> Transfer
            </a>
        </div>
    </div>
    <div class="row mt-2">
        <h1>
            <strong>
                <i class="bi bi-cash-coin"></i>
            </strong>
        </h1>
    </div>

    <hr />
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <td>Transaction Type</td>
                    <td>Account Name</td>
                    <td>Amount</td>
                    <td>Transaction Date</td>
                </tr>
            </thead>
            <tbody>

            </tbody>
        </table>
    </div>
</div>