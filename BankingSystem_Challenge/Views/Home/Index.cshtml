@model BankingSystem_Challenge.ViewModels.HomeViewModel;
@{
    ViewData["Title"] = "Home Page";
}

<div class="row mt-4">
    <div class="row mt-4">
        <div class="col-6">
            <h4>
                <strong class="text-danger">
                    <i class="bi bi-wallet2"></i> My balance : @Model.iban
                </strong>
            </h4>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-action="Verify" asp-controller="FinancialTransactions" >
                <i class="bi bi-arrow-repeat"></i> Transfer
            </a>
        </div>
    </div>
    <div class="row mt-2">
        <h1>
            <strong>
                <i class="bi bi-cash-coin"></i> @Model.balance
            </strong>
        </h1>
    </div>
   
    <hr />
    <div class="row text-center justify-content-center">
        <h3>
            <strong>
                savings account
            </strong>
        </h3>
        <div class="col-3 text-center border border-primary p-4 rounded">
            <div class="form-group mt-2 text-start">
                <i class="bi bi-person-fill"></i> @Model.first_name @Model.last_name
            </div>
            <div class="form-group mt-2 text-start">
                <i class="bi bi-telephone"></i> @Model.phonenumber
            </div>
            <div class="form-group mt-2 text-start">
                <i class="bi bi-envelope-fill"></i> @Model.email
            </div>
        </div>
        <div class="row justify-content-center mt-3">
            <a class="btn btn-warning" style="width: 10rem;" asp-controller="Home" asp-action="TransactionHistory">
                <i class="bi bi-clock-history"></i> View History
            </a>
        </div>
    </div>
</div>
